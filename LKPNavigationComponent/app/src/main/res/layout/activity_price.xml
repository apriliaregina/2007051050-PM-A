<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PriceActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="PRICE and SHIPPING"
        android:textColor="@color/purple_700"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="$3,980"
        android:textColor="#FF121111"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="Premium Express\nFree"
                android:textColor="#FF121111"
                android:textSize="16sp" />
            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Estimated delivery within\n 2 â€“ 3 business days.\n"
                android:textColor="#FF121111" />
        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="Standard (Fragrance only)\nFree"
                android:textColor="#121111"
                android:textSize="16sp" />

            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Estimated delivery within\n 2 - 5 business days\n.\nFragrance are delivered\nwithin the continental US only.\n"
                android:textColor="#FF121111" />
        </TableRow>

        <TableRow>
            <TextView
                android:padding="3dip"
                android:text="Next Business Day:\nCurrently Not Available"
                android:textColor="#121111"
                android:textSize="16sp" />

            <TextView
                android:gravity="left"
                android:padding="3dip"
                android:text="Currently Not Available"
                android:textColor="#FF121111" />
        </TableRow>



    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>